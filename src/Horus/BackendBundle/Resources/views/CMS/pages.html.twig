{% extends 'HorusBackendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@HorusBackendBundle/Resources/public/css/pages.sass' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="page" id="pages">
        <h2><i class="glyphicon glyphicon-file"></i> Vos pages({{ pages.getTotalItemCount }})</h2>
        {% include 'HorusBackendBundle:Slots:display.html.twig' %}
        <div class="well">
            <h3>Filtrer par</h3>
            {% include 'HorusBackendBundle:CMS:_states.html.twig' %}
        </div>
        {% include 'HorusBackendBundle:CMS:_listpages.html.twig' %}

        <div class="pull-right">
            {{ knp_pagination_render(pages) }}
        </div>

        <div class="clear"></div>
        <div class="action">
            <a href="{{ path('horus_site_page_create') }}" class="btn btn-primary"><i
                        class="glyphicon glyphicon-plus"></i> Ajouter un page</a>
        </div>
    </div>
{% endblock %}

